<!DOCTYPE html>
<html lang="ko">
<head>
   <% include ../static/head.ejs %>
</head>
<body>

<!-- PRELOADER -->
<div id="preloader">
   <div class="tb-cell">
      <div class="page-loading">
         <div class="item-icon"></div>
      </div>
   </div>
</div>
<!-- END / PRELOADER -->

<!-- PAGE WRAP -->
<div id="page-wrap">
   <!-- HEADER -->
   <%include ../addon/header.ejs%>
</div>
<!-- END / PAGE WRAP -->

  <!-- CONTENT -->
  <section id="content">
    <div class="content-wrap">
        <div class="container clearfix">
          <div class="col_full">
              <ul class="tab-nav tab-nav2 center clearfix">
                <li class="inline-block"><a href="/login">로그인</a></li>
                <li class="inline-block ui-state-active"><a href="#" onclick="return false;">회원가입</a></li>
              </ul>
          </div>

          <form action="/auth/signup" method="post">
            <div class="col_one_third nobottommargin">

                <div class="well well-lg nobottommargin" id="member-type-select">

                  <h3>계정 유형</h3>

                  <div class="col_full">
                      <input type="radio" id="normal-form-member" name="member_type" value="PUBLIC" class="hidden" <%= normal_check %>/>
                      <label for="normal-form-member" class="button btn-default btn-block text-center">일반 회원</label>
                  </div>

                  <div class="col_full">
                      <input type="radio" id="business-form-member" name="member_type" value="BUSINESS" class="hidden" <%= business_check %>/>
                      <label for="business-form-member" class="button btn-default btn-block text-center">사업자 회원</label>
                  </div>

                </div>
            </div>

            <div class="col_one_third nobottommargin">
                <h3>아직 계정이 없으신가요?</h3>

                <div class="col_full col_last">
                    <label for="register-form-name">이메일:</label>
                    <input type="text" id="register-form-name" name="email" value="<%= email %>" class="form-control" />
                </div>

                <div class="clear"></div>

                <div class="col_full col_last">
                    <label for="register-form-password">비밀번호:</label>
                    <input type="password" id="register-form-password" name="password" value="" class="form-control" />
                </div>

                <div class="clear"></div>

                <div class="col_full col_last">
                    <label for="register-form-repassword">비밀번호 확인:</label>
                    <input type="password" id="register-form-repassword" name="repassword" value="" class="form-control" />
                </div>

                <div class="clear"></div>

                <section id="business-input" <% if (normal_check) { %>style="display:none;"<% } %>>
                  <div class="col_full col_last">
                      <label for="register-form-name">이름:</label>
                      <input type="text" id="register-form-name" name="name" value="<%= name %>" class="form-control" />
                  </div>

                  <div class="clear"></div>

                  <div class="col_full col_last">
                      <label for="register-form-phone">전화번호:</label>
                      <input type="text" id="register-form-phone" name="phone" value="<%= phone %>" class="form-control" />
                  </div>
                </section>

                <div class="col_full nobottommargin">
                    <button class="button button-3d button-black nomargin">가입하기</button>
                </div>

            </div>
          </form>

          <div class="col_one_third col_last nobottommargin" id="social_login">

            <div class="col_full col_last"></div>

            <div class="btn btn-primary col_half col_last" (click)="social()">
              <span class="ts-icon">
                <i class="xi-facebook"></i>
              </span>
              <strong class="ts-text">Facebook</strong>
            </div>

            <div class="clear"></div>

            <div class="btn btn-danger col_half col_last" (click)="social()">
              <span class="ts-icon">
                <i class="xi-google"></i>
              </span>
              <strong class="ts-text">Google</strong>
            </div>

            <div class="clear"></div>

            <div class="btn btn-success col_half col_last" (click)="social()">
              <span class="ts-icon">
                <i class="xi-naver"></i>
              </span>
              <strong class="ts-text">NAVER</strong>
            </div>

            <div class="clear"></div>

            <div class="btn btn-warning col_half col_last" (click)="social()">
              <span class="ts-icon">
                <i class="xi-kakao"></i>
              </span>
              <strong class="ts-text">Kakao</strong>
            </div>
            <div class="clear"></div>
          </div>
        </div>
    </div>
  </section>

  <!-- END / CONTENT -->

<!--footer-->
<%include ../addon/footer.ejs%>

<!-- LOAD JQUERY -->
<%include ../static/js.ejs%>

<!--사업자 회원일때 전화번호 입력창 뜨게 하기-->
<script>

  $("#normal-form-member").click(function() {
    $("#business-input").hide();
  });

  $("#business-form-member").click(function() {
    $("#business-input").show();
  });

</script>

<% //include ../addon/component.ejs%>
</body>
</html>
