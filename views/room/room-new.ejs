               error: function(jqXHR, textStatus, error){
                  alert("img Send error" + error);
               }
            });

         },
         error: function(jqXHR, textStatus, error){
            alert(error);
         }
      });
      e.preventDefault(); // avoid to execute the actual submit of the form.
   });

