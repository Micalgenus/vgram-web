<% var vrimages = JSON.parse(post.thumbnail_image_path)[0].vrimages %>
<article class="portfolio-item <%= post.post_type %>" data-id="<%= post.ID %>">
  <div class="portfolio-image">
    <div class="fslider" data-arrows="false" data-speed="400" data-pause="4000">
      <div class="flexslider">
        <div class="slider-wrap">
          <% for (var i = 0; i < vrimages.length; i++) { %>
          <div class="slide"><a href="/post/ajax/<%= post.ID %>" class="ajax-link"><img src="<%= mediaUrl %>/<%= vrimages[i].thumb %>" alt=""></a></div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  <div class="portfolio-desc">
    <span class="author"><a href="/user/<%= post.user.ID %>"><img src="<%= post.user.profile_image_path %>" alt=""> <%= post.user.nickname %></a></span>
    <h3><a href="/post/<%= post.ID %>"><%= post.title %></a></h3>
    <!-- <h3><a href="/html/ajax_view.html" class="ajax-link"><%= post.title %></a></h3> -->
    <span class="info clearfix">
      <span class="date"><%= new Date(post.createdAt).toLocaleDateString("ko-KR", {year: 'numeric', month: '2-digit', day: '2-digit'}) %></span>
      <span class="heart"><i class="icon-heart3"></i> <%= post.LikeUsers.length %></span>
      <span class="comment"><i class="icon-comments"></i> <%= post.Comments.length %></span>
    </span>
  </div>
</article>
