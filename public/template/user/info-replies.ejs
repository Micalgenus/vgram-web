<div class="clear topmargin-sm"></div>
<ol class="commentlist noborder nomargin nopadding clearfix">
    <% for (var i = 0; i < data.length; i++) { %>
        <li class="comment even thread-even depth-1" id="li-comment-1">
            <div id="comment-1" class="comment-wrap clearfix">
                <div class="comment-meta">
                    <div class="comment-author vcard">
                        <span class="comment-avatar clearfix">
                        <img alt='' src='<%= data[i].user.profile_image_path %>' class='avatar avatar-60 photo avatar-default' height='60' width='60' /></span>
                    </div>
                </div>
                <div class="comment-content clearfix">
                    <div class="comment-author"><%= data[i].user.nickname %><span><a href="#" title="Permalink to this comment"><%= data[i].createdAt %></a></span></div>
                    <p><%= data[i].content %></p>
                    <a class='comment-reply-link' href='#'><i class="icon-reply"></i></a>
                </div>
                <div class="clear"></div>
            </div>
        </li>
    <% } %>
</ol>
